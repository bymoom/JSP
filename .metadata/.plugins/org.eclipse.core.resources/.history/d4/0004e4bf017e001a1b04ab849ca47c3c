<!-- url과 어떤 템플릿(jsp)을 쓸지 규정하는 역할 -->
<decorators defaultdir="/WEB-INF/views/decorators">	
	<decorator name="main" page="decorator.jsp">
		<pattern>/*</pattern>				
	</decorator>
		
	<excludes>
		<pattern>/commons/login</pattern>
		<pattern>/*.jsp</pattern>
		<pattern>/resources/*</pattern>
	</excludes>
</decorators>