<?xml version="1.0" encoding="UTF-8"?>

<web-app>

	<!-- 브라우저의 요청과 관계없이 톰캣이 배포될때 미리 환경을 만들어두기 위해(context initialize) listener 사용 (Context 서비스할때 실행됨) -->
	<!-- 브라우저의 request와 관계가 없기 때문에 매핑이 필요없다. 곧 매핑에 필요한 네임도 줄 필요없다. -->
	<context-param> <!-- 전역 파라미터 -->
		<param-name></param-name>
		<param-value></param-value>
	</context-param>

	<listener>
		<listener-class></listener-class>
	</listener>

	<error-page>
		<error-code>500</error-code>
		<location>/error/500_error.jsp</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/error/404_error.jsp</location>
	</error-page>
</web-app>